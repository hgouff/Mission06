@model Movie

@{
    ViewData["Title"] = "Add a Movie";
}


<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    @* get inputs from the user *@
</div>
<div class="d-flex justify-content-center">
    <form method="post" class="w-50 p-4 border rounded shadow bg-light">
        <div class="mb-3" d-flex align-items-center>
            <label asp-for="Category" class="text-start fw-bold">Category:</label>
            <input asp-for="Category" class="form-control col-9"/>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="mb-3" d-flex align-items-center>
            <label asp-for="Title" class="text-start fw-bold">Title:</label>
            <input asp-for="Title" class="form-control col-9"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3" d-flex align-items-center>
            <label asp-for="Year" class="text-start fw-bold">Year:</label>
            <input asp-for="Year" class="form-control col-9"/>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="mb-3" d-flex align-items-center>
            <label asp-for="Director" class="text-start fw-bold">Director:</label>
            <input asp-for="Director" class="form-control col-9"/>
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <div class="mb-3" d-flex align-items-center>
            <label asp-for="Rating" class="text-start fw-bold">Rating</label>
            <select asp-for="Rating" class="form-control col-9">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG13">PG-13</option>
                <option value="R">R</option>
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="mb-3" d-flex align-items-center>
            <label asp-for="Edited" class="text-start fw-bold">Edited:</label>
            <select asp-for="Edited" class="form-control col-9">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div class="mb-3" d-flex align-items-center>
            <label asp-for="LentTo" class="text-start fw-bold">Lent To:</label>
            <input asp-for="LentTo" class="form-control col-9"/>
        </div>

        <div class="mb-3" d-flex align-items-center>
            <label asp-for="Notes" class="text-start fw-bold">Notes:</label>
            <input asp-for="Notes" maxlength="25" class="form-control col-9"/>
        </div>
        
        <button type="submit" class="btn btn-primary w-100">Submit Movie</button>
    </form>
    <br/>
</div>
